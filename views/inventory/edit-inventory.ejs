<% if (title) { %>
<h1 id="vehicle-class"><%= title %></h1>
<% } else {
          res.redirect('/')
        } %>



<div class="blockAddClass">';
  <form class="blockAddClassForm" action="/inv/update" method="POST">
    <label for="classification_id">Classification:</label>
    <%- classificationSelect %>
    <br><br />
    <label for="inv_make">Make:</label>
    <input type="text" id="inv_make" name="inv_make" value="<%= inv_make %>" required placeholder="Min of 3 characters"><br>

    <label for="inv_model">Model:</label>
    <input type="text" id="inv_model" name="inv_model" value="<%= inv_model %>" placeholder="Min of 3 characters" required><br>

    <label for="inv_description">Description:</label>
    <textarea id="inv_description" name="inv_description" required><%= inv_description %></textarea><br>

    <label for="inv_image">Image Path:</label>
    <input type="text" id="inv_image" name="inv_image" value="<%= inv_image %>" value="/images/vehicles/no-image.png" required><br>

    <label for="inv_thumbnail">Thumbnail Path:</label>
    <input type="text" id="inv_thumbnail" name="inv_thumbnail" value="/images/vehicles/no-image.png" required><br>

    <label for="inv_price">Price:</label>
    <input type="number" id="inv_price" name="inv_price" value="<%= inv_price %>" placeholder="Decimal or integer" required><br>

    <label for="inv_year">Year:</label>
    <input type="number" id="inv_year" name="inv_year" placeholder="4-digit year" value="<%= inv_year %>" required><br>

    <label for="inv_miles">Miles:</label>
    <input type="number" id="inv_miles" name="inv_miles" placeholder="digits only" value="<%= inv_miles %>" required><br>

    <label for="inv_color">Color:</label>
    <input type="text" id="inv_color" name="inv_color" value="<%= inv_color %>" required><br>';

    <button type="submit">Edit vehicle</button>';
    <input type="hidden" name="inv_id" <% if(locals.inv_id) { %> value="<%= locals.inv_id %>" <% } %>>
  </form>';