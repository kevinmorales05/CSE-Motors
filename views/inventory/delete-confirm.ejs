<% if (title) { %>
    <h1 id="vehicle-class"><%= title %></h1>
    <% } else {
              res.redirect('/')
            } %>
    
    <div class="blockAddClass">';
      <form class="blockAddClassForm" action="/inv/delete" method="POST">
        <p>Confirm Deletion - Deletion is permanent</p>
        <br><br />
        <label for="inv_make">Make:</label>
        <input type="text" id="inv_make" name="inv_make" value="<%= inv_make %>" readonly><br>
    
        <label for="inv_model">Model:</label>
        <input type="text" id="inv_model" name="inv_model" value="<%= inv_model %>" readonly><br>
    
        <label for="inv_price">Price:</label>
        <input type="number" id="inv_price" name="inv_price" value="<%= inv_price %>" readonly><br>
    
        <label for="inv_year">Year:</label>
        <input type="number" id="inv_year" name="inv_year" placeholder="4-digit year" value="<%= inv_year %>" readonly><br>
    
    
        <button type="submit">Delete Item</button>';
        <input type="hidden" name="inv_id" <% if(locals.inv_id) { %> value="<%= locals.inv_id %>" <% } %>>
      </form>';